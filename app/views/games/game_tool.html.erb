<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Game Tool</h1>
      <div class="flex space-x-4">
        <%= form_with url: "/game_prediction", method: :get, class: "flex-1" do |form| %>
          <%= form.submit "Predict Outcome", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex-1" %>
        <% end %>
        <%= form_with url: "/game_simulation", method: :get, class: "flex-1" do |form| %>
          <%= form.submit "Simulate Outcome", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded flex-1" %>
        <% end %>
      </div>
    </div>

    <%= form_with url: "/game_prediction", method: :get, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">Home Team</label>
          <%= form.select :home_team_id, 
            options_for_select(@team_options, @home_team_season&.id),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
          %>
        </div>

        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">Away Team</label>
          <%= form.select :away_team_id,
            options_for_select(@team_options, @away_team_season&.id),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
          %>
        </div>

        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <label class="block text-sm font-medium text-gray-700">Neutral Site</label>
            <%= form.check_box :neutral, 
              { checked: @neutral },
              class: "w-5 h-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded relative"
            %>
            <span class="text-sm text-gray-500">Game is played at neutral location</span>
            <div class="absolute left-0 top-full mt-1 px-2 py-1 bg-gray-800 text-white rounded text-xs hidden hover:block" title="Game is played at neutral location">
              Game is played at neutral location
            </div>
          </div>
        </div>

        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <label class="block text-sm font-medium text-gray-700">Upset Modifier</label>
            <%= form.number_field :upset_modifier,
              value: @upset_modifier || 1.0,
              min: 0.1,
              max: 2.0,
              step: 0.1,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 relative"
            %>
            <span class="text-sm text-gray-500">Adjusts probability of upsets</span>
            <div class="absolute left-0 top-full mt-1 px-2 py-1 bg-gray-800 text-white rounded text-xs hidden hover:block" title="Adjusts probability of upsets">
              Adjusts probability of upsets
            </div>
          </div>
        </div>
      </div>

      <% if @predictor || @current_prediction %>
        <div class="mt-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-gray-50 p-4 rounded-lg">
              <h2 class="text-lg font-semibold text-gray-900 mb-2">Home Team</h2>
              <p class="text-2xl font-bold text-gray-900">
                <%= @predictor ? @predictor.home_expected_score : @current_prediction[:home_score] %>
              </p>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg">
              <h2 class="text-lg font-semibold text-gray-900 mb-2">Away Team</h2>
              <p class="text-2xl font-bold text-gray-900">
                <%= @predictor ? @predictor.away_expected_score : @current_prediction[:away_score] %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
