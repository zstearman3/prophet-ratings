<h1 class="text-xl font-bold mb-4">Recent Games</h1>

<table class="table-auto w-full border">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left">Date</th>
      <th class="px-4 py-2 text-left">Away</th>
      <th class="px-4 py-2 text-left">Home</th>
      <th class="px-4 py-2 text-left">Score</th>
      <th class="px-4 py-2 text-left">Location</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= game.start_time.strftime('%b %d, %Y') %></td>
        <td class="px-4 py-2"><%= game.away_team_name %></td>
        <td class="px-4 py-2"><%= game.home_team_name %></td>
        <td class="px-4 py-2"><%= "#{game.away_team_score} - #{game.home_team_score}" %></td>
        <td class="px-4 py-2"><%= game.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
