<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-6">
    <div class="flex items-center">
      <span class="text-md text-gray-600 mr-2">#<%= @rank %></span>
      <h1 class="text-2xl font-bold text-gray-900"><%= @team.school %></h1>
      <span class="text-2xl text-gray-600 ml-2"><%= @team.nickname %></span>
    </div>

    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Adjusted Stats</h2>
      <% if @snapshots.last %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white p-4 rounded-lg shadow">
            <p class="text-sm text-gray-600">Adj ORtg</p>
            <p class="text-xl font-semibold text-gray-900"><%= @snapshots.last.adj_offensive_efficiency %></p>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <p class="text-sm text-gray-600">Adj DRtg</p>
            <p class="text-xl font-semibold text-gray-900"><%= @snapshots.last.adj_defensive_efficiency %></p>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <p class="text-sm text-gray-600">Adj Pace</p>
            <p class="text-xl font-semibold text-gray-900"><%= @snapshots.last.adj_pace %></p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Ranking Over Time</h2>
      <!-- Placeholder for chart -->
      <div class="bg-white p-6 rounded-lg shadow">
        <!-- Chart will be inserted here -->
      </div>
    </div>

    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Season Games</h2>
      <div class="table-responsive">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Opponent</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Result</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prediction</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @team_games.each do |tg| %>
              <% game = tg.game %>
              <% opponent_game = tg.home? ? game.away_team_game : game.home_team_game %>
              <% opponent = opponent_game.team %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to game.start_time.to_date, game_path(game), class: "text-sm text-gray-900 hover:text-blue-600" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= opponent.school %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= game.home_team_score %>–<%= game.away_team_score %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% def prediction_for(game, snapshot_lookup, config) %>
                      <% home_ss = snapshot_lookup[game.home_team_season.id]&.select { |s| s.snapshot_date <= game.start_time.to_date }&.max_by(&:snapshot_date) %>
                      <% away_ss = snapshot_lookup[game.away_team_season.id]&.select { |s| s.snapshot_date <= game.start_time.to_date }&.max_by(&:snapshot_date) %>
                      <% return nil unless home_ss && away_ss %>
                      <% game.predictions.find { |p| p.home_team_snapshot_id == home_ss.id && p.away_team_snapshot_id == away_ss.id } %>
                  <% end %>
                  <% prediction = prediction_for(game, @snapshot_lookup, @config) %>
                  <% if prediction %>
                    <% win_prob = (prediction.home_team_snapshot.team_id == tg.team_id) ? prediction.home_win_probability : (1 - prediction.home_win_probability) %>
                    <%= win_prob.round(2) %>
                  <% else %>
                    —
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>