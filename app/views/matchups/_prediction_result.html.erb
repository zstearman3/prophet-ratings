<% if prediction %>
  <div class="bg-blue-50 p-4 rounded-lg mt-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">Predicted Scores</h2>
    <p><strong>Home:</strong> <%= prediction[:home_expected_score] %></p>
    <p><strong>Away:</strong> <%= prediction[:away_expected_score] %></p>
  </div>
<% else %>
  <div class="text-red-600">No prediction result.</div>
<% end %>