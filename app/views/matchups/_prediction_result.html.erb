<% if prediction %>
  <div class="bg-blue-50 p-4 rounded-lg mt-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">Predicted Result</h2>

    <div class="mb-2">
      <p><strong>Home:</strong> <%= prediction[:home_team] %> — <%= number_with_precision(prediction[:home_expected_score], precision: 1) %> pts</p>
      <p><strong>Away:</strong> <%= prediction[:away_team] %> — <%= number_with_precision(prediction[:away_expected_score], precision: 1) %> pts</p>
    </div>

    <div class="mt-2 font-medium text-gray-700">
        <% if prediction[:home_expected_score] > prediction[:away_expected_score] %>
          🏠 <%= prediction[:home_team] %> wins
        <% elsif prediction[:away_expected_score] > prediction[:home_expected_score] %>
          🚗 <%= prediction[:away_team] %> wins
        <% else %>
          🤝 Tie game
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="text-red-600">No prediction result.</div>
<% end %>