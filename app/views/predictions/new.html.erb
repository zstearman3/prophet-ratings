<%= form_with url: new_prediction_path, method: :get, class: "flex w-full justify-between" do |form| %>
  <div class="flex flex-col">
    <%= form.label :home_team %>
    <%= form.select :home_team_id, options_for_select(@team_options), { selected: @home_team_season&.id } %>
  </div>

  <div class="flex flex-col">
    <%= form.label :away_team %>
    <%= form.select :away_team_id, options_for_select(@team_options), { selected: @away_team_season&.id } %>
  </div>

  <div class="flex flex-col">
    <%= form.label :neutral %>
    <%= form.check_box :neutral %>
  </div>

  <%= form.button "Predict Outcome"%>
<% end %>

<% if @predictor %>
<div class="flex w-full">
  <div class="flex flex-col">
    <h1>Home Team</h1>
    <h1><%= @predictor.home_expected_score %></h1>
  </div>
  <div class="flex flex-col">
    <h1>Away Team</h1>
    <h1><%= @predictor.away_expected_score %></h1>
  </div>
</div>
<% end %>
